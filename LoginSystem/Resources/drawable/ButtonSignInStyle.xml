<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>

      <item>
        <shape>
          <corners android:radius="4dp"></corners>
          <gradient angle="270" android:endColor="#4A6EA9" android:startColor="#4A6EA9"></gradient>
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"></padding>
        </shape>
      </item>     
    </layer-list>   
  </item>

  <item android:state_pressed="true">
    <layer-list>

      <item android:right="4dp" android:top="4dp">
        <shape>
          <corners android:radius="2dp"></corners>
          <solid android:color="#D6D6D6"></solid>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <corners android:radius="4dp"></corners>
          <stroke android:width="1dp" android:color="#BABABA"></stroke>
          <gradient angle="270" android:endColor="#7C97C1" android:startColor="#4A6EA9"></gradient>
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"></padding>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
